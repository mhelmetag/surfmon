<%= turbo_stream.append 'modal' do %>
  <div id="provider_search" class="modal is-active">
    <div class="modal-background" data-action="click->provider_search#close"></div>
    <div class="modal-content">
      <div class="box">
        <div class="field" >
          <div class="control">
            <input type="text" class="input" placeholder="<%= I18n.t('alerts_form.search.search_for', record_name: I18n.t(@provider_type, scope: 'alerts_form.search.record_name')) %>" data-action="input->provider_search#search" />
          </div>
        </div>

        <div class="field">
          <div class="control">
            <div class="select">
              <select id="provider_search_select">
                <option value="" selected>Search results show here...</option>
              </select>
            </div>
          </div>
        </div>

        <div class="field">
          <button class="button is-light" data-action="click->provider_search#update">Update</button>
        </div>
      </div>
    </div>
    <button class="modal-close is-large" aria-label="close" data-action="click->provider_search#close"></button>
  </div>
<% end %>
