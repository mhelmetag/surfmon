<% field = fields_for_select(@source).first[1]%>
<%= turbo_stream.update "alert_conditions_attributes_#{@index}_field" do %>
  <%= options_for_select(fields_for_select(@source), value: field) %>
<% end %>
<%= turbo_stream.update "alert_conditions_#{@index}_value_input" do %>
  <% render partial: 'value', locals: { index: @index, source: @source, field: field } %>
<% end %>
